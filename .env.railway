# ========================================
# Railway Production Configuration
# Sistema de Dietas Hospital
# ========================================
# Copy these variables to Railway's environment variables
# Railway Dashboard → Your Project → Variables
# ========================================

# ========================================
# Application Settings
# ========================================
APP_NAME="Sistema de Dietas"
APP_ENV=production
APP_KEY=base64:YAqPhkBk2Q85JXuRYjhEE0jjZbDMUcgXeauV/VgreqE=
APP_DEBUG=false
APP_URL=https://YOUR_APP_NAME.up.railway.app
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES
APP_TIMEZONE=America/Guayaquil

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
# Railway automatically provides these variables:
# PGHOST, PGPORT, PGDATABASE, PGUSER, PGPASSWORD
# Use them as references like: ${PGHOST}
# ========================================
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# ========================================
# Session Configuration
# ========================================
# CRITICAL: These settings prevent 419 CSRF errors
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# ========================================
# Cache Configuration
# ========================================
CACHE_STORE=database
CACHE_PREFIX=

# ========================================
# Queue Configuration
# ========================================
QUEUE_CONNECTION=database

# ========================================
# Logging Configuration
# ========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error
LOG_STDERR_FORMATTER=Monolog\Formatter\JsonFormatter

# ========================================
# Security Settings
# ========================================
BCRYPT_ROUNDS=12

# ========================================
# Filesystem Configuration
# ========================================
FILESYSTEM_DISK=local

# ========================================
# Broadcasting & Mail
# ========================================
BROADCAST_CONNECTION=log
MAIL_MAILER=log

# ========================================
# NOTES:
# ========================================
# 1. Replace APP_URL with your actual Railway domain
# 2. Don't set SESSION_DOMAIN or SESSION_SECURE_COOKIE to avoid 419 errors
# 3. Leave empty values as empty, don't use "null" or null
# 4. Railway will automatically set PORT variable
# 5. Database variables (PGHOST, etc.) are automatically provided by Railway
# ========================================

