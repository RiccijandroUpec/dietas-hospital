# Configuración para Railway - Sistema de Dietas
# Copia estas variables en las Variables de Entorno de Railway

APP_NAME="Sistema de Dietas"
APP_ENV=production
APP_KEY=base64:TU_APP_KEY_AQUI  # Generar con: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://tu-app.up.railway.app  # Reemplazar con tu URL de Railway

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Base de datos - Railway PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}  # Railway provee esto automáticamente
DB_PORT=${PGPORT}  # Railway provee esto automáticamente
DB_DATABASE=${PGDATABASE}  # Railway provee esto automáticamente
DB_USERNAME=${PGUSER}  # Railway provee esto automáticamente
DB_PASSWORD=${PGPASSWORD}  # Railway provee esto automáticamente

# Sesiones - IMPORTANTE para login (especialmente en móviles)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true  # true porque Railway usa HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=none  # Cambiar a 'none' para que funcione en móviles
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true  # true porque Railway usa HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache
CACHE_STORE=database
CACHE_PREFIX=

# Queue
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=local

BROADCAST_CONNECTION=log

# Si usas MySQL en lugar de PostgreSQL:
# DB_CONNECTION=mysql
# DB_HOST=TU_HOST_MYSQL
# DB_PORT=3306
# DB_DATABASE=TU_DATABASE
# DB_USERNAME=TU_USERNAME
# DB_PASSWORD=TU_PASSWORD
